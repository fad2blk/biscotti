<project name="biscotti" default="javadoc">
	
	
	<property name="java.src"		value="C:\Program Files\Java\jdk1.7.0_06\src"/>
	<property name="guava.src"		value="${basedir}\lib\guava-13.0-sources"/>
	
	<property name="src.home"		value="${basedir}/src"/>
	<property name="docs.home"		value="${basedir}/javadoc"/>
	
	<property name="poi.docs"		value="http://poi.apache.org/apidocs/"/>
	<property name="java.docs"		value="http://download.oracle.com/javase/7/docs/api/"/>
	<property name="guava.docs"		value="http://guava-libraries.googlecode.com/svn/trunk/javadoc/"/>
	
	<property name="base"			value="biscotti.base"/>
	<property name="collect"		value="biscotti.collect"/>
	<property name="io"				value="biscotti.io"/>
	
	<target name="javadoc">
		<delete dir="${doc.home}" />
        <javadoc access="public"
        	   author="true"
        	   classpath=""
        	   destdir="${docs.home}"
    	       nodeprecated="false"
    	       nodeprecatedlist="false"
    	       noindex="false"
    	       nonavbar="false"
    	       notree="false"
    	       packagenames="${base},${collect},${io}"
    	       source="1.6"
    	       sourcepath="${src.home};${java.src};${guava.src};"
    	       splitindex="true"
    	       use="true"
    	       version="true"
     	   	   linksource="yes">
            <link href="${java.docs}"/>
            <link href="${guava.docs}"/>
        </javadoc>
    </target>
</project>
